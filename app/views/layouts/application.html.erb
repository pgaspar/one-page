<!DOCTYPE html>
<html>
<head>
  <title>Railsrumble</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <%= yield %>

  <hr />

  <% if signed_in? %>
    <%= link_to 'Manage your Pages', :pages %> | <%= link_to 'Logout', :destroy_user_session, :method => :delete %>
  <% else %>
    <%= link_to 'Sign In', :new_user_session %>
  <% end %>

</body>
</html>
