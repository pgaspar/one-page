<header class="jumbotron subhead" id="overview">
  <div class="container">
    <h1 class="editable"><%= @page.title %></h1>
    <p class="lead editable"><%= @page.subtitle %></p>
  </div>
</header>

<div class="container">
  <div class="row">
    <div class="span3 page-sidebar">
      <ul class="nav nav-list page-sidenav" data-spy="affix" data-offset-top="250">
        <% @page.sections.each_with_index do |section, section_index| %>
          <li>
            <a href="#section-<%= section_index %>">
              <i class="icon-chevron-right"></i> <%= section.title %>
            </a>
          </li>
        <% end %>
        <li class="add-section">
            <a href="#section-<%= @page.sections.size %>">
              <i class="icon-plus"></i> New Section
            </a>
          </li>
      </ul>
    </div>
    <div class="span9">
      <% @page.sections.each_with_index do |section, section_index| %>
        <section id="section-<%= section_index %>">
          <div class="page-header">
            <h1><%= section.title %></h1>
          </div>
          <p class="editable">
            <%= section.content %>
          </p>
        </section>
      <% end %>
    </div>
  </div>
</div>
