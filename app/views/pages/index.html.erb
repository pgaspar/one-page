<div id="page-list" class="container-fluid">

  <div id="account-menu">
    <ul class="nav nav-pills nav-stacked">
      <li><%= link_to 'Logout', :destroy_user_session %></li>
    </ul>
  </div>

  <div class="row-fluid">
    <header class="span12">
      <h1>One Page<br/><small>Manage your pages</small></h1>
    </header>
  </div>

    <% @pages.each_with_index do |page, index| %>

      <% if index % 3 == 0 %>
        <div class="row-fluid">
      <% end %>

      <div class="page-thumb span4">
        <%= link_to page do %>
          <div class="page-thumb-head" <%= set_page_gradient_style(page) %>>
            <h2><%= page.title %></h2>
          </div>
        <% end %>
      </a>
        <div class="page-thumb-controls">
          <%= link_to edit_page_path(page) do %><i class="icon-cog"></i> Edit<% end %>
          <%= link_to page, :method => :delete, :confirm => 'Are your sure you want to delete this page? There is no turning back!' do %><i class="icon-trash"></i> Delete<% end %>
        </div>
      </div>

      <% if index % 3 == 2 %>
        </div>
      <% end %>

    <% end %>

    <% if @pages.size % 3 == 0 %>
      <div class="row-fluid">
    <% end %>

    <%= link_to new_page_path, :class => 'page-thumb page-new span4' do %>
      New Page
    <% end %>

    </div>
  
</div>